			textstyle	2
			textalign	1
		}
		windowDef help_text5
		{
			rect	0,199,640,100
			visible	1
			forecolor	1,0,0.494,1
			text	"Good Luck!"
			textscale	1.5
			font	"fonts/marine"
			textstyle	2
			textalign	1
		}
	}
}
